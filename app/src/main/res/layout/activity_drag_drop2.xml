<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:columnWidth="320dp"
    android:orientation="vertical"
    android:rowCount="2"
    android:stretchMode="columnWidth">

    <include layout="@layout/fondo_pantalla" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:src="@drawable/goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/cuadrado"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:layout_row="0"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/cuadrado2"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/rectangulo2"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rectan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trapezi2" />

    <LinearLayout
        android:id="@+id/rombo"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/romboshade"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/rectangulo"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/rombo2"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rombo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/trapezi"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/pentagonshade"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/rombo"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/trapezi2"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/pentagon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cuadrado2" />

    <LinearLayout
        android:id="@+id/rectangulo"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rectan2"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/cuadrado"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/cuadrado2"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_row="2"
        android:layout_column="9"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/cuadrado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rombo2" />

</android.support.constraint.ConstraintLayout>