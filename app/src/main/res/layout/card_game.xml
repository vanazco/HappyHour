<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Games.Victor.CardGame1">

    <include
        android:id="@+id/include3"
        layout="@layout/fondo_pantalla"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/bee_2"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bee"
        app:layout_constraintStart_toEndOf="@+id/bewear_1"
        app:layout_constraintTop_toBottomOf="@+id/panda_1" />

    <ImageButton
        android:id="@+id/bewear_2"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bewear"
        app:layout_constraintStart_toEndOf="@+id/panda_1"
        app:layout_constraintTop_toTopOf="@+id/include3" />

    <ImageButton
        android:id="@+id/bewear_1"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bewear"
        app:layout_constraintStart_toStartOf="@+id/include3"
        app:layout_constraintTop_toBottomOf="@+id/bee_1" />

    <ImageButton
        android:id="@+id/panda_1"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/panda"
        app:layout_constraintStart_toEndOf="@+id/bee_1"
        app:layout_constraintTop_toTopOf="@+id/include3" />

    <ImageButton
        android:id="@+id/panda_2"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/panda"
        app:layout_constraintStart_toEndOf="@+id/bee_2"
        app:layout_constraintTop_toBottomOf="@+id/bewear_2" />

    <ImageButton
        android:id="@+id/bee_1"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bee"
        app:layout_constraintStart_toStartOf="@+id/include3"
        app:layout_constraintTop_toTopOf="@+id/include3" />

</android.support.constraint.ConstraintLayout>