<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Games.Victor.CardGame1">

    <include layout="@layout/fondo_pantalla" />

    <ImageButton
        android:id="@+id/bee_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="53dp"
        android:background="@drawable/bee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/panda_2"
        app:layout_constraintStart_toEndOf="@+id/bewear_1"
        app:layout_constraintTop_toBottomOf="@+id/panda_1"
        />

    <ImageButton
        android:id="@+id/bewear_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="72dp"
