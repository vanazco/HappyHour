<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Games.Victor.CardGame1">

    <include
        android:id="@+id/include3"
        layout="@layout/fondo_pantalla" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bee_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bee"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/include3"
        app:layout_constraintStart_toEndOf="@+id/bewear_1"
        app:layout_constraintTop_toBottomOf="@+id/panda_1" />

    <ImageButton
        android:id="@+id/bewear_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bewear"
        app:layout_constraintStart_toEndOf="@+id/panda_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bewear_1"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bewear"
        app:layout_constraintBottom_toBottomOf="@+id/include3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bee_1" />

    <ImageButton
        android:id="@+id/panda_1"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/panda"
        app:layout_constraintStart_toEndOf="@+id/bee_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/panda_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/panda"
        app:layout_constraintBottom_toBottomOf="@+id/include3"
        app:layout_constraintStart_toEndOf="@+id/bee_2"
        app:layout_constraintTop_toBottomOf="@+id/bewear_2" />

    <ImageButton
        android:id="@+id/bee_1"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bee"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>