        app:layout_constraintStart_toEndOf="@+id/bee_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/panda_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/panda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bee_2"
        app:layout_constraintTop_toBottomOf="@+id/bewear_2" />

    <ImageButton
        android:id="@+id/bee_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/bee"
        app:layout_constraintBottom_toTopOf="@+id/bewear_1"
        app:layout_constraintEnd_toStartOf="@+id/panda_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>