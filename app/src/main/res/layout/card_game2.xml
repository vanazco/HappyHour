<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Games.Victor.CardGame2">

    <include layout="@layout/fondo_pantalla" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bee_2_2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/bee"
                tools:layout_editor_absoluteY="63dp" />

            <ImageButton
                android:id="@+id/rowlet_1"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/rowlet"
                tools:layout_editor_absoluteY="213dp" />

            <ImageButton
                android:id="@+id/bee_1_2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/bee"
                tools:layout_editor_absoluteX="362dp"
                tools:layout_editor_absoluteY="63dp" />

            <ImageButton
                android:id="@+id/panda_1_2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/panda"
                tools:layout_editor_absoluteX="181dp"
                tools:layout_editor_absoluteY="213dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/panda_2_2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/panda"
                tools:layout_editor_absoluteX="542dp"
                tools:layout_editor_absoluteY="63dp" />

            <ImageButton
                android:id="@+id/bewear_1_2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/bewear"
                tools:layout_editor_absoluteX="362dp"
                tools:layout_editor_absoluteY="213dp" />

            <ImageButton
                android:id="@+id/rowlet_2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/rowlet"
                tools:layout_editor_absoluteX="181dp"
                tools:layout_editor_absoluteY="63dp" />

            <ImageButton
                android:id="@+id/bewear_2_2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/bewear"
                tools:layout_editor_absoluteX="543dp"
                tools:layout_editor_absoluteY="213dp" />

        </LinearLayout>

    </LinearLayout>







</android.support.constraint.ConstraintLayout>