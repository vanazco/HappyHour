<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Games.Victor.CardGame2">

    <include
        android:id="@+id/include4"
        layout="@layout/fondo_pantalla" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/goback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/bee_2_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bee"
        app:layout_constraintStart_toStartOf="@+id/include4"
        app:layout_constraintTop_toTopOf="@+id/include4" />

    <ImageButton
        android:id="@+id/rowlet_1"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rowlet"
        app:layout_constraintBottom_toBottomOf="@+id/include4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bee_2_2" />

    <ImageButton
        android:id="@+id/bee_1_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bee"
        app:layout_constraintStart_toEndOf="@+id/rowlet_2"
        app:layout_constraintTop_toTopOf="@+id/include4" />

    <ImageButton
        android:id="@+id/panda_1_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/panda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rowlet_1"
        app:layout_constraintTop_toBottomOf="@+id/rowlet_2" />


    <ImageButton
        android:id="@+id/bewear_2_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bewear"
        app:layout_constraintStart_toEndOf="@+id/bee_1_2"
        app:layout_constraintTop_toTopOf="@+id/include4" />

    <ImageButton
        android:id="@+id/bewear_1_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bewear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/panda_1_2"
        app:layout_constraintTop_toBottomOf="@+id/bee_1_2" />

    <ImageButton
        android:id="@+id/rowlet_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rowlet"
        app:layout_constraintStart_toEndOf="@+id/bee_2_2"
        app:layout_constraintTop_toTopOf="@+id/include4" />

    <ImageButton
        android:id="@+id/panda_2_2"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/panda"
        app:layout_constraintBottom_toBottomOf="@+id/include4"
        app:layout_constraintStart_toEndOf="@+id/bewear_1_2"
        app:layout_constraintTop_toBottomOf="@+id/bewear_2_2" />


</android.support.constraint.ConstraintLayout>