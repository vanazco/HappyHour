<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Estructura.Games">

    <ImageButton
        android:id="@+id/game1"
        android:layout_width="195dp"
        android:layout_height="159dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:src="@drawable/numberGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/game2"
        android:layout_width="195dp"
        android:layout_height="159dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:src="@drawable/shapeGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game4"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/game3"
        android:layout_width="195dp"
        android:layout_height="159dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:src="@drawable/abcGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game2"
        app:layout_constraintStart_toEndOf="@+id/game1" />


    <ImageButton
        android:id="@+id/game4"
        android:layout_width="195dp"
        android:layout_height="159dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:background="#00FFFFFF"
        android:src="@drawable/cardGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/game5"
        android:layout_width="195dp"
        android:layout_height="159dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:src="@drawable/puzzleGame"
        app:layout_constraintBottom_toTopOf="@+id/game3"
        app:layout_constraintEnd_toStartOf="@+id/game4"
        app:layout_constraintHorizontal_bias="0.966"
        app:layout_constraintStart_toEndOf="@+id/game6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/game6"
        android:layout_width="195dp"
        android:layout_height="159dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:src="@drawable/colourGame"
        app:layout_constraintBottom_toTopOf="@+id/game1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>